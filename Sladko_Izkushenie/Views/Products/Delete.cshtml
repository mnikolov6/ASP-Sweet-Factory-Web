@model Sladko_Izkushenie.Data.Product

@{
    ViewData["Title"] = "Изтрий";
}

<h1>Изтрий</h1>

<h3>Сигурни ли сте, че искате да изтриете избраното?</h3>
<div>
    <h4>Продукт</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time_of_register)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time_of_register)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Category_Type)
        </dd>
        <dd class="col-sm-10 text-center">
            <img class="shadow rounded" width="350" height="350" src="@Html.DisplayFor(model => model.ImgURL)" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-outline-danger" /> |
        @if (Model.CategoryId == 1)
        {
            <a class="btn btn-outline-info" asp-action="IndexC">Обратно към листа</a>
        }
        @if (Model.CategoryId == 3)
        {
            <a class="btn btn-outline-info" asp-action="IndexM">Обратно към листа</a>
        }
        @if (Model.CategoryId == 2)
        {
            <a class="btn btn-outline-info" asp-action="IndexS">Обратно към листа</a>
        }
    </form>
</div>
