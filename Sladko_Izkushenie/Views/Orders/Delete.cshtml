@model Sladko_Izkushenie.Data.Order

@{
    ViewData["Title"] = "Изтрий";
}

<h1>Изтрий</h1>

<h3>Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Поръчка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order_date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Обратно към листа</a>
    </form>
</div>
